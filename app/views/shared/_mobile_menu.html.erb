<div id="mobile-menu" class="absolute top-0 bottom-0 w-full hidden flex-col justify-center items-center space-y-6 pb-20" style="background-color: var(--blue);">
  <i id="close-burger-menu" class="absolute top-0 right-1 p-3 text-white text-opacity-90 text-2xl fas fa-times"></i>
  <% if user_signed_in? %>
    <% if policy(Project.new).create? %>
      <p><%= link_to "New Project", new_project_path, class: "text-white text-opacity-90 text-xl font-bold" %></p>
    <% end %>
    <p><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-white text-opacity-90 text-xl font-bold" %></p>
  <% else %>
    <p><%= link_to "Sign In", new_user_session_path, class: "text-white text-opacity-90 text-xl font-bold" %></p>
    <p><%= link_to "Sign Up", new_user_registration_path, class: "text-white text-opacity-90 text-xl font-bold" %></p>
  <% end %>
</div>