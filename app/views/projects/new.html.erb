<%= simple_form_for(@project) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :status, collection: Project::STATUSES %>
  <%= f.input :estimated_level_of_effort, collection: 1..10 %>
  <%= f.input :actual_level_of_effort, collection: 1..10 %>
  <%= f.submit %>
<% end %>